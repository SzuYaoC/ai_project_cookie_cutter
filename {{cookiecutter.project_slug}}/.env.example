# Database
DATABASE_URL=postgresql://{{ cookiecutter.postgres_user }}:{{ cookiecutter.postgres_password }}@db:5432/{{ cookiecutter.postgres_db }}
FE_DATABASE_URL=postgresql://{{ cookiecutter.postgres_user }}:{{ cookiecutter.postgres_password }}@db:5432/{{ cookiecutter.postgres_db }}

# LLM Provider: ollama, openai, azure_openai
LLM_PROVIDER={{ cookiecutter.llm_provider }}

# Ollama (for local LLM)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL={{ cookiecutter.ollama_model }}
OLLAMA_EMBEDDING_MODEL={{ cookiecutter.embedding_model }}

# OpenAI (if using openai provider)
OPENAI_API_KEY=sk-your-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI (if using azure_openai provider)
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# MCP
MCP_SEARCH_URL=http://mcp-search:7071/mcp

# JWT Authentication
JWT_SECRET_KEY={{ cookiecutter.jwt_secret }}
JWT_EXPIRE_MINUTES=60

# Chainlit
CHAINLIT_AUTH_SECRET=your-chainlit-secret-change-me
API_BASE_URL=http://api:8000
